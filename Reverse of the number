#include <stdio.h>

void main() {
    int num, r, sum = 0;
    printf("Enter the number: ");
    scanf("%d", &num);
   
    while (num!= 0)
    {
        r = num % 10;
        sum = sum * 10 + r;
        num = num / 10;
    }

    printf("The number in reverse order is %d", sum);
}

-------------------------------------------------------------------
Output:
Enter the number: 255
The number in reverse order is 552
