#include <stdio.h>
void main()
{
    char ch;
    printf("Enter a Alphabet ");
    scanf("%c",&ch);
    switch(ch)
    {
        case 'a':
        case 'e':
        case 'i':
        case 'o':
        case 'u':
        case 'A':
        case 'E':
        case 'I':
        case 'O':
        case 'U':{
        printf("You Entered a vowel ");
        break;
        }
        default:
        printf("You Entered a Consonant");
    }
}
-----------------------------------------------------
Output1 :
Enter a Alphabet a
You Entered a vowel

Output2 :
Enter a Alphabet j
You Entered a Consonant
