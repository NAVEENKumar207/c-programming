#include <stdio.h>
int main() {
    int n;
    printf("Enter a number : ");
    scanf("%d",&n);
    int ce = n / 2;
    for(int i = 0;i<n;i++){
        for(int j=0;j<n;j++){
            if(i ==ce && j==ce){
                printf("* ");
            }else{
                printf("~ ");
        }
        }
        printf("\n");
    }
    return 0;
}
