#include <stdio.h>

void main() {
    int choice;
    float c,f;
    printf("What did You want to find Celsius to Fahrenheit or Fahrenheit to Celsius");
    printf("\nEnter 0 to find Celsius to Fahrenheit or 1 to find Fahrenheit to Celsius ");
    scanf("%d",choice);
    switch(choice)
    {
        case 0:
        
        printf("Your choice is to find Celsius to Fahrenheit");
        printf("Enter the celsius");
        scanf("%.2f",c);
        
         if(c<=56.7 && c>=0)
         {
             int cf;
             cf=(c*9/5)+32;
             printf("The Fahrenheit is %.2f",cf);
         }
        else
          printf("You entered a wrong number or negative number");
        
        case 1:
        
        printf("Your choice is to find Fahrenheit to Celsius");
        printf("Enter the Fahrenheit ");
        scanf("%.2f",f);
        
         if(f<=134.1&&f>=0)
         {
             int fc;
             fc=(f-32)*5/9;
             printf("The  is Celsius %.2f",fc);
         }
        else
          printf("You entered a wrong number or negative number");
    }
}
